<table class="table table-striped">
  <% unless @departments.empty? %>
  <th>
      <div class="department-name">
        <%= "#{t('active_department')}" %>
      </div>
    </th>
    <th></th>
    <th></th>
    <% @departments.each do |d| %>
      <!-- <li class="list<%= cycle('odd', 'even') %>"> -->
      <tr>
      <td>
        <div class="department-name">
          <%= d.name %>
          (<%= d.code %>)
        </div>
      </td>
      <td>
        <div class="department-edit">
          <%= link_to "#{t('edit_text')}", :action => "edit_department", :id=>d.id %>
        </div>
      </td>
      <td>
        <div class="department-edit">
          <%= link_to "#{t('delete_text')}", {:action => "delete_department", :id=>d.id}, method: :DELETE, :confirm => "#{t('delete_confirm_msg')}" %>
        </div>
      </td>
      </tr>
    <% end %>
    <% unless @inactive_departments.empty? %>
    <th>
        <div class="department-name">
          <%= "#{t('inactive_department')}" %>
        </div>
      </th>
      <% @inactive_departments.each do |c| %>
        <!-- <li class="list<%= cycle('odd', 'even') %>"> -->
        <tr>
        <td>
          <div class="department-name">
            <%= c.name %>
            (<%= c.code %>)
          </div>
        </td>
        <td>
          <div class="department-edit">
            <%= link_to "#{t('edit_text')}", {:action => "edit_department", :id=>c.id} %>
          </div>
        </td>
        <td>
          <div class="department-edit">
            <%= link_to "#{t('delete_text')}", {:action => "delete_department", :id=>c.id}, method: :DELETE, :confirm=>"#{t('delete_confirm_msg')}" %>
          </div>
        </td>
        </tr>
      <% end %>
    <% end %>
  <% else %>
    <p class="flash-msg">
      <%= "#{t('no_department_found')}" %>
    </p>
  <% end %>
</table>
