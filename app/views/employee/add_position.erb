<div id="content-header">
  <%#= image_tag("  HR/show_hr.png") %>
  <h1>
    <%= "#{t('employee_settings')}" %>
  </h1>
  <h3>
    <%= "#{t('add_position')}" %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div><hr>
<div id="page-yield" style="padding-left: 20px;">
  <div class="box">
    <div class="bread_crumb">
      <%= link_to "#{t('hr_text')}", {:controller => "employee",:action => "hr"}, class: "label label-lg label-pink arrowed-right" %>
    </div>
    <% unless flash[:warn_notice].nil? %>
      <div id="errorExplanation1">
        <ul>
          <li>
            <%= flash[:warn_notice] %>
          </li>
        </ul>
      </div>
    <% end %>
    <%= form_for :position do |c| %>
      <% unless flash[:notice].nil? %>
        <p class="flash-msg">
          <%= flash[:notice] %>
        </p>
      <% end %>
      <%= error_messages_for 'position' %>
      <div id="form-content">
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="position_name">
            <%= t('name') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= c.text_field :name %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="category_name">
            <%= "#{t('employee_category')}" %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= select :position, :employee_category_id, @categories.map {|s| [s.name, s.id]}, :prompt => "#{t('select')}" %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-checkbox-pair">
    <div class="row">
      <div class="col-md-2">
          <label class="status" for="status">
            <%= t('status') %>
          </label>
      </div>
      <div class="col-md-2">
          <div id="radio-buttons">
            <%= c.radio_button  "status", "true", :checked => "checked" %>
            <label class="label_for_status" for="add_grade_status_true">
              <%= t('active') %>
            </label>
            <%= c.radio_button  "status", "false" %>
            <label class="label_for_status" for="add_grade_status_false">
              <%= t('inactive') %>
            </label>
          </div>
      </div>
    </div>
        </div><br>
        <div id="submit-button">
          <%= submit_tag(" #{t('create_text')}", class: "btn btn-purple") %>
        </div><br>
      </div>
    <% end %>
    <div id="position-list">
      <%= render :partial => "position" %>
    </div>
  </div>
</div>
