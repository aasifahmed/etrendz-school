<%= javascript_include_tag :application %>
<div id="content-header">
  <%#= image_tag("HR/show_hr.png") %>
  <h1>
    <%= t('rejected_payslip') %>
  </h1>
  <h3>
    <%= t('department_wise_payslip') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div><hr>
<div id="page-yield" style="padding-left: 20px;">
  <div class="bread_crumb">
    <%= link_to t('hr'), {:controller => "employee", :action=>"hr"}, class: "label label-lg label-pink arrowed-right" %>
    <%= link_to t('create_payslip'), {:controller => "employee", :action=>"payslip"}, class: "label label-lg label-pink arrowed-right arrowed-in" %> 
    <!-- \#{t('rejected_payslip')} -->
  </div><br>
  <div class="drop-down-box">
  <div class="row">
  <div class="col-md-2">
    <label for="category_prefix">
      <%= t('select_a_department') %>
    </label>
  </div>
  <div class="col-md-2">
    <div class="text-input-bg">
      <%= select :individual_payslip, :department_id, @departments.map { |s| [s.name, s.id] },{:prompt => "#{ t('select_a_department')}"}, onChange: "onChangeRequest(this, '#{url_for(action: :update_rejected_employee_list, department_id: 'paramid')}')"  %>
    </div>
    </div>
    </div>
  </div>
  <div class="extender"></div>
  <div id="employees_select_list"></div>
</div>
