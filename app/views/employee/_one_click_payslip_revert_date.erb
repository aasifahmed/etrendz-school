<%= javascript_include_tag :application %>
<%= csrf_meta_tag %>
<script src="/javascripts/jquery-1.3.2.min.js" type="text/javascript"></script>
<script src="/javascripts/jquery-ui.min.js" type="text/javascript"></script>
<script>
  
  $jq = $.noConflict();
  $jq(document).ready(function() {
    $jq("#salary_date").datepicker({dateFormat: 'yy-mm-dd'});
  });

</script>
<%= form_for(:one_click_payslip, :url => {:action => 'one_click_payslip_revert'}, :remote => true) do %>
  <div class="label-field-pair">
    <label for="salary_date">
      <%= t('salary_month') %>
    </label>
    <div class="text-input-bg">
      <%= select :one_click_payslip, :salary_date, @salary_dates.map {|c| [I18n.localize(c.salary_date, :format=>:month_year),c.salary_date.strftime("%Y-%m-%d")]}, {:prompt => "#{t('select_month')}"}  %>
                                                                                                                            
    </div>
  </div>
  <div id="submit-button">
    <%= submit_tag(" #{t('go')}") %>
  </div>
<% end %>
