<table class="table table-striped">
  <% unless @bank_details.empty? and @inactive_bank_details.empty? %>
    <% unless @bank_details.empty? %>
      <th>
        <div class="category-name">
          <%= t('active_bank_field') %>
        </div>
      </th>
      <th></th>
      <th></th>
      <% @bank_details.each do |c| %>
        <!-- <li class="list<%= cycle('odd', 'even') %>"> -->
        <tr>
        <td>
          <div class="category-name">
            <%= c.name %>
          </div>
        </td>
        <td>
          <div class="category-edit">
            <%= link_to "#{t('edit_text')}", {:action => "edit_bank_details", :id=>c.id} %>
          </div>
        </td>
        <td>
          <div class="category-edit">
            <%= link_to "#{t('delete_text')}", {:action => "delete_bank_details", :id=>c.id}, method: :DELETE, :confirm => "#{t('delete_confirm_msg')}" %>
          </div>
        </td>
        </tr>
      <% end %>
    <% end %>
    <% unless @inactive_bank_details.empty? %>
      <th>
        <div class="category-name">
          <%= t('inactive_bank_field') %>
        </div>
      </th>
      <th></th>
      <th></th>
      <% @inactive_bank_details.each do |c| %>
        <!-- <li class="list<%= cycle('odd', 'even') %>"> -->
        <tr>
        <td>
          <div class="category-name">
            <%= c.name %>
          </div>
        </td>
        <td>
          <div class="category-edit">
            <%= link_to "#{t('edit_text')}", {:action => "edit_bank_details", :id=>c.id} %>
          </div>
        </td>
        <td>
          <div class="category-edit">
            <%= link_to "#{t('delete_text')}", {:action => "delete_bank_details", :id=>c.id}, method: :DELETE, :confirm=>"#{t('delete_confirm_msg')}" %>
          </div>
        </td>
        </tr>
      <% end %>
    <% end %>
  <% else %>
    <p class="flash-msg">
      <%= t('no_bank_detail') %>
    </p>
  <% end %>
</ul>
