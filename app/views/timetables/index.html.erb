<div id="content-header">
  <%#= image_tag("show_timetable.png") %>
  <h1>
    <%= t('timetable_text') %>
  </h1>
  <h3>
    <%= t('home') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div><hr>
<div id="page-yield" style="padding-left: 20px;">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="box">
      <div class="row">
      <div class="col-md-6">
    <% if permitted_to? :new_timetable,:timetable %>
      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('create_text')} #{t('weekdays_text')}", {:controller => "weekday", :action => "index"}, style: "font-weight:bold;font-size:18px;" %>
        </div>
        <div class="link-descr">
          <%= t('create_text') %>
          <%= t('weekdays_text') %>
        </div>
        </div>
      </div>
    <% end %>
      <div class="col-md-6">
    <div class="link-box">
      <div class="link-heading">
        <%= link_to t('set_class_timings'), {:controller => "class_timings", :action => "index"}, style: "font-weight:bold;font-size:18px;" %>
      </div>
      <div class="link-descr">
        <%= t('select_a_class_and_edit_the_timetable') %>
        \.
      </div>
      </div>
    </div>
    </div><br>
    <% if permitted_to? :work_allotment,:timetable %>
      <div class="row">
      <div class="col-md-6">
      <div class="link-box">
        <div class="link-heading">
          <%= link_to t('work_allotment'), {controller: :timetables, action: :work_allotment}, style: "font-weight:bold;font-size:18px;" %>
        </div>
        <div class="link-descr">
          <%= t('work_allotment_descr') %>
        </div>
      </div>
      </div>
    <% end %>
    <% if permitted_to? :new_timetable,:timetable %>
    <div class="col-md-6">
      <div class="link-box">
        <% @config = Setting.available_modules %>
        <% if @config.include?('HR') %>
          <div class="link-heading">
            <%= link_to "#{t('create_timetable')}", {:action => "new_timetable"}, style: "font-weight:bold;font-size:18px;" %>
          </div>
        <% else %>
          <div class="link-heading">
            <%= link_to "#{t('create_timetable')}", {:action => "new_timetable"}, style: "font-weight:bold;font-size:18px;" %>
          </div>
        <% end %>
        <div class="link-descr">
          <%= t('select_a_class_and_create_the_timetable') %>
        </div>
      </div>
      </div>
      </div><br>
    <% end %>
    <% if permitted_to? :edit_master,:timetable %>
    <div class="row">
    <div class="col-md-6">
      <div class="link-box">
        <% @config = Setting.available_modules %>
        <% if @config.include?('HR') %>
          <div class="link-heading">
            <%= link_to "#{t('edit_timetable')}", {:action => "edit_master"}, style: "font-weight:bold;font-size:18px;" %>
          </div>
        <% else %>
          <div class="link-heading">
            <%= link_to "#{t('edit_timetable')}", {:action => "edit_master"}, style: "font-weight:bold;font-size:18px;" %>
          </div>
        <% end %>
        <div class="link-descr">
          <%= t('select_a_class_and_edit_the_timetable') %>
        </div>
      </div>
      </div>
    <% end %>
    <% if permitted_to? :view,:timetable %>
    <div class="col-md-6">
      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('view_timetable')}", {:action => "view"}, style: "font-weight:bold;font-size:18px;" %>
        </div>
        <div class="link-descr">
          <%= t('view_the_timetable_for_a_class') %>
        </div>
      </div>
      </div>
      </div><br>
    <div class="row">
    <div class="col-md-6">
      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('teacher_timetable')}", {:action => "teachers_timetable"}, style: "font-weight:bold;font-size:18px;" %>
        </div>
        <div class="link-descr">
          <%= t('view_the_timetable_for_teacher') %>
        </div>
      </div>
    </div>
    <% end %>
    <% if permitted_to? :timetable,:timetable %>
    <div class="col-md-6">
      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('institutional')} #{t('timetable_text')}", {:action => "timetable"}, style: "font-weight:bold;font-size:18px;" %>
        </div>
        <div class="link-descr">
          <%= t('view_entire_timetable') %>
        </div>
      </div>
    </div>
    </div>
    <% end %>
    <div class="extender"></div>
  </div>
</div>
