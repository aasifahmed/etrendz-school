<%= stylesheet_link_tag("event/edit_event.css") %>
<div id="content-header">
  <%= image_tag("manage_news/manage_news_logo.png") %>
  <h1>
    <%= t('events') %>
  </h1>
  <h3>
    <%= t('edit_event') %>
  </h3>
  <div id="app-back-button">
    <%= back_button %>
  </div>
</div>
<div id="page-yield">
  <%= flash[:notice] %>
  <%= form_for :events, :url=>{:id => @events.id} do |f| %>
    <%= error_messages_for 'events' %>
    <div class="label-field-pair">
      <label for="start-date">
        <%= t('start_date') %>
      </label>
      <div class="input-group">
        <%= f.text_field "start_date", class: "start_date form-control" %>
          <span class="input-group-addon">
            <i class="ace-icon fa fa-calendar bigger-110"></i>
          </span>
      </div>
    </div>
    <div class="label-field-pair">
      <label for="end-date">
        <%= t('end_date') %>
      </label>
      <div class="input-group">
        <%= f.text_field "end_date", class: "end_date form-control" %>
          <span class="input-group-addon">
            <i class="ace-icon fa fa-calendar bigger-110"></i>
          </span>
      </div>
    </div>
    <div class="label-field-pair">
      <label for="title">
        <%= t('title') %>
      </label>
      <div class="text-input-bg">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="label-field-pair">
      <label for="description">
        <%= t('description') %>
      </label>
    </div>
    <%= f.text_area "description" %>
    <div class="label-field-pair">
      <label for="is-holiday">
        <%= t('is_holiday') %>
      </label>
      <%= f.check_box :is_holiday %>
    </div>
    <div class="label-field-pair">
      <label for="end-date">
        <%= t('common_event') %>
      </label>
      <%= f.check_box :is_common %>
    </div>
    <%= f.submit "#{t('update_event')}" %>
  <% end %>
</div>
<script type="text/javascript">
  $( ".start_date" ).datepicker({
    dateFormat: 'yy-mm-dd',
    showOtherMonths: true,
    selectOtherMonths: false
    //isRTL:true,
  });
  $( ".end_date" ).datepicker({
    dateFormat: 'yy-mm-dd',
    showOtherMonths: true,
    selectOtherMonths: false
    //isRTL:true,
  });
</script>