<%= javascript_include_tag :application %>
<%#= javascript_include_tag :modalbox %>
<%= stylesheet_link_tag("employee_attendances/index.css") %>
<div id="content-header">
  <%#= image_tag("attendence/attendence.png") %>
  <h1>
    <%= t('attendance') %>
  </h1>
  <h3>
    <%= t('attendance_register') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div>
<div id="page-yield" style="padding-left: 20px;">
  <div class="bread_crumb">
    <%= link_to t('hr'), {:controller => "employee", :action=>"hr"}, class: "label label-lg label-pink arrowed-right" %>
    <!-- / \#{link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance"}  -->
    <!-- / \#{t('attendance_register')} -->
  </div>
  <div class="label-field-pair">
    <label for="employee_department_select">
      <%= t('select_the_department') %>
    </label>
    <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
    <div class="text-input-bg">
      <%= select :batch, :id, @departments.map {|b| [b.name, b.id] },{:prompt => "#{t('select_the_department')}"}, 
      {onChange: "onChangeRequest(this, '#{url_for(controller: :employee_attendances, action: :show_dept, dept_id: 'paramid')}')" } %>
    </div>
  </div>
  <div id="register"></div>
  <div id="modal-box"></div>
</div>
