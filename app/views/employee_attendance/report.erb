<%= javascript_include_tag :application %>
<%= stylesheet_link_tag("employee_attendance/report.css") %>
<div id="content-header">
  <%#= image_tag("attendence/attendence.png") %>
  <h1>
    <%= t('employee_attendance_text') %>
  </h1>
  <h3>
    <%= t('reports_text') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div><hr>
<div id="page-yield" style="padding-left: 20px;">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="bread_crumb">
    <%= link_to t('hr'), {:controller => "employee", :action=>"hr"}, class: "label label-lg label-pink arrowed-right" %>
    <!-- \#{link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance"}  -->
    <!-- \#{t('reports_text')} -->
  </div>
  <%= form_for :employee_department do |s| %>
    <div class="label-field-pair">
      <label for="employee_department_select">
        <%= t('select_the_department') %>
      </label>
      <div class="text-input-bg">
        <%= select :employee_department, :department_id, @departments.map {|c| [c.name, c.id]}, {:prompt => "#{t('select_a_department')}"}, {:onChange => "onChangeRequest(this, '#{url_for(action: :update_attendance_report, department_id: 'paramid')}') "}  %>
      </div>
    </div>
  <% end %>
  <div id="attendance_report"></div>
</div>
