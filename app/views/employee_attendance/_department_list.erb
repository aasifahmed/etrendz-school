<div class="label-field-pair">
  <label>
    <%= t('select_a_course') %>
    \:
  </label>
</div>
<div id="list_content">
  <div id="list">
    <div class="sel-list">
      <%= t('select') %>
      \: #{link_to t('all'), 'javascript:void(0);', onclick: "$('.batches_box').each(function() {this.checked = true; });"},
      \#{link_to t('none'), 'javascript:void(0);', onclick: "$('.batches_box').each(function() { this.checked = false; });"}
    </div>
    <%= form_for :employee,url: {:action=>'update_department_leave_reset'} do |form| %>
      <% @employees.each do |b| %>
        <div class="name_list<%= cycle('odd', 'even') %>">
          <li>
            <label>
              <%= check_box_tag "employee_id[]", b.id,true,:class=>'batches_box' %>
              <div class="att_list_names">
                <%= b.full_name %>
              </div>
            </label>
          </li>
        </div>
      <% end %>
      <div class="user_submit_button1">
        <%= submit_tag " #{t('reset')}" %>
      </div>
    <% end %>
  </div>
</div>
