<%= stylesheet_link_tag("employee_attendance/add_leave_types.css") %>
<div id="content-header">
  <%#= image_tag("HR/leave-new.png") %>
  <h1>
    <%= t('leave_types') %>
  </h1>
  <h3>
    <%= t('add_leave_type') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div><hr>
<div id="page-yield" style="padding-left: 20px;">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="box">
    <%= form_for :leave_type do |c| %>
      <%= error_messages_for 'leave_type' %>
      <div id="form-content">
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="category_name">
            <%= t('leave_name') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= c.text_field :name %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="category_name">
            <%= t('leave_code') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= c.text_field :code %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="category_name">
            <%= t('max_leave') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= c.text_field :max_leave_count %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="extender"></div>
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="category_name">
            <%= t('enable_carry_forward') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="check_box">
            <%= c.check_box "carry_forward",:checked => false %>
          </div>
      </div>
    </div>
        </div>
        <div class="label-radio-pair">
    <div class="row">
      <div class="col-md-2">
          <label class="status">
            <%= t('status') %>
          </label>
      </div>
      <div class="col-md-2">
          <%= c.radio_button  "status", "true", :checked => "checked" %>
          <label class="label_for_status" for="add_grade_status_true">
            <%= t('active') %>
          </label>
          <%= c.radio_button  "status", "false" %>
          <label class="label_for_status" for="add_grade_status_false">
            <%= t('inactive') %>
          </label>
      </div>
    </div>
        </div>
        <div id="submit-button">
          <%= submit_tag(" #{t('create_text')}", class: "btn btn-pink") %>
        </div><br>
      </div>
    <% end %>
  </div>
  <div id="leave_type-list">
    <%= render :partial => "leave_types" %>
  </div>
</div>
