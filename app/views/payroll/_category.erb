<table class="table table-striped">
  <% unless @categories.empty? %>
    <th>
      <%= t('earnings') %>
    </th>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <% @categories.each do |c| %>
      <!-- <li class="list<%= cycle('odd', 'even') %>"> -->
      <tr>
      <td>
        <div class="category-name">
          <%= c.name %>
        </div>
      </td>
      <td>
        <div class="category-edit">
          <%= link_to "#{t('edit_text')}", {:action => "edit_category", :id=>c.id} %>
        </div>
      </td>
      <td>
        <div class="category-edit">
          <%= link_to "#{t('delete_text')}", {:action => "delete_category", :id=>c.id}, :confirm => "#{t('delete_confirm_msg')}" %>
        </div>
      </td>
      <td>
        <% unless c.status == false %>
          <div class="category-edit">
            <%= link_to "#{t('inactivate')}", {:action => "inactivate_category", :id => c.id}, :confirm=>"#{t('inactivate_confirm')}", :update => "category-list",:remote => true %>
          </div>
      </td>
      <td>
        <% else %>
          <div class="category-edit">
            <%= link_to "#{t('activate')}",  {:action => "activate_category", :id => c.id},:confirm=>"#{t('activate_confirm')}", :update => "category-list", :remote => true %>
          </div>
      </td>
        <% end %>
      </tr>
    <% end %>
  <% else %>
    <p class="flash-msg">
      <%= t('earnings_msg') %>
    </p>
  <% end %>
</table>
