<div id="content-header">
  <%#= image_tag("HR/show_hr.png") %>
  <h1>
    <%= t('payroll_text') %>
  </h1>
  <h3>
    <%= t('add_new_category') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div><hr>
<div id="page-yield" style="padding-left: 20px;">
  <div class="box">
    <div class="bread_crumb">
      <%= link_to "#{t('hr_text')}", {:controller => "employee",:action => "hr"}, class: "label label-lg label-pink arrowed-right" %>
      <!-- \#{link_to "#{t('hr_setting')}", :controller => "employee",:action => "settings"}  -->
      <!-- \#{t('add_new_category')} -->
    </div>
    <% unless flash[:warn_notice].nil? %>
      <div id="errorExplanation1">
        <ul>
          <li>
            <%= flash[:warn_notice] %>
          </li>
        </ul>
      </div>
    <% end %>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg">
        <%= flash[:notice] %>
      </p>
    <% end %>
    <%= form_for :category do |c| %>
      <%= error_messages_for 'category' %>
      <div id="form-content">
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="category_name">
            <%= t('category_name') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= c.text_field :name %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="percentage">
            <%= t('percentage') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= c.text_field :percentage %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-field-pair">
    <div class="row">
      <div class="col-md-2">
          <label for="percentage_of">
            <%= t('percentage_of') %>
          </label>
      </div>
      <div class="col-md-2">
          <div class="text-input-bg">
            <%= select :category, :payroll_category_id, @categories.map {|cat| [cat.name, cat.id]}, :prompt =>"#{t('select')}" %>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-radio-pair">
    <div class="row">
      <div class="col-md-2">
          <label class="status" for="status">
            <%= t('status') %>
          </label>
      </div>
      <div class="col-md-2">
          <div id="radio-buttons">
            <%= c.radio_button  "status", "true", :checked => "checked" %>
            <label class="label_for_status" for="add_grade_status_true">
              <%= t('active') %>
            </label>
            <%= c.radio_button  "status", "false" %>
            <label class="label_for_status" for="add_grade_status_false">
              <%= t('inactive') %>
            </label>
          </div>
      </div>
    </div>
        </div><br>
        <div class="label-checkbox">
          <%= c.check_box :is_deduction %>
          <%= t('is_deduction') %>
        </div>
        <div class="extender"></div>
        <div id="submit-button">
          <%= submit_tag(" #{t('create_text')}", class: "btn btn-purple") %>
        </div><br>
      </div>
    <% end %>
    <div id="category-list">
      <%= render :partial=>"category" %>
    </div>
  </div>
</div>
