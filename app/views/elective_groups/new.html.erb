<%= stylesheet_link_tag("elective_groups/new.css") %>
<div id="content-header">
  <%#= image_tag("examination/show_exam.png") %>
  <h1>
    <%= t('batches_text') %>
  </h1>
  <h3>
    <%= "#{t('new_elective')}" %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div><hr>
<div id="inner-tab-menu">
      <%= link_to t('new_text'), {:action => :new, :batch_id => @batch.id}, class: "label label-lg label-purple arrowed-right" %>
</div><br>
<div id="page-yield" style="padding-left: 20px;">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="bread_crumb">
    <%= link_to t('course_text'), courses_path, class: "label label-lg label-pink arrowed-right" %> »
    <%= link_to @course.full_name, @course, class: "label label-lg label-pink arrowed-right arrowed-in" %> »
    <%= link_to "#{t('batch')} #{@batch.name}", {:controller => :batches, :action => :show , :course_id => @course.id, :id => @batch.id}, class: "label label-lg label-pink arrowed-right arrowed-in" %> »
    <%= link_to "#{t('electives')}", {:action => :index, :batch_id => @batch.id}, class: "label label-lg label-pink arrowed-right arrowed-in" %> »
    <%= t('new_text') %>
  </div>
  <div class="box">
    <%= form_for(@elective_group, :url => {:action => :create, :batch_id=> @batch.id}) do |f| %>
      <% @elective_group.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
      <div class="label-field-pair">
        <div class="label-container">
          <%= f.label "#{t('name')}" %>
        </div>
        <div class="input-container">
          <%= f.text_field :name %>
        </div>
      </div>
      <br>
      <%= submit_tag "", :value => " #{t('save')}", :class => "btn btn-primary btn-sm" %>
    <% end %>
    <div class="extender"></div>
  </div>
</div>
